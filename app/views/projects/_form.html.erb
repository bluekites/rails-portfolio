
<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %></h2>
    <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %><br/>
  <% end %>
  
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-field" %> <br/>
  <%= f.label :description, "Project description", class: "form-label" %>
  <%= f.text_area :description, class: "form-field"%> <br/>
  <%= f.label :link, class: "form-label" %>
  <%= f.text_field :link, class: "form-field" %><br/>
  <div class="button-wrapper">
    <%= f.submit class: "submit-button" %>
  </div>
<% end %>

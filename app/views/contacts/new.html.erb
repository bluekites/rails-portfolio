<% provide(:title, "Contact Dean") %>

<h1 id="page-title">Contact Dean</h1>

<div class="form-wrapper">
  <% if @contact.errors.any? %>
    <h2><%= pluralize(@contact.errors.count, "error") %></h2>
    <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <%= form_for(@contact) do |f| %>
    <%= f.label :name, "Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-field" %><br />
    <%= f.label :email, "Email", class: "form-label" %>
    <%= f.text_field :email, class: "form-field" %><br />
    <%= f.label :content, "Content", class: "form-label" %>
    <%= f.text_area :content, class: "form-field" %><br />
    <div class="button-wrapper">
      <%= f.submit "Send", class: "submit-button" %>
    </div>
  <% end %>
</div>
<% provide(:title, "Contact Dean") %>

<h1 id="page-title">Contact Dean</h1>

<div class="contact-form">
  <%= form_for(@contact) do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %><br />
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br />
    <%= f.label :content, "Content" %>
    <%= f.text_area :content %><br />
    <%= f.submit "Send" %>
  <% end %>
</div>
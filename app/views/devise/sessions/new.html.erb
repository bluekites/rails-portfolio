
<div class="form-wrapper">
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, class: "form-field", autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, class: "form-field", autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field form-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions button-wrapper">
      <%= f.submit "Log in", class: "submit-button" %>
    </div>
  <% end %>
  
  <div class="form-label">
    <%= render "devise/shared/links" %>
  </div>
</div>
